@model WebAppAsp1.Models.EntetiesModel.TrainingModel

@{
    ViewBag.Title = "Training";
    ViewData["heading"] = "training info";
}

<div>
    <h4>Training</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TrainerName)
        </dt>

        <dd>
            <a href="/Profile/Trainer?id=@Model.Trainer">@Html.DisplayFor(model => model.TrainerName)</a>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Hours)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Hours)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Minage)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Minage)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    @if (User.IsInRole("Client"))
    {
        <div>
            <a class="btn btn-primary" href="/Message/Subscribe?id=@Model.Trainer&obj=@Model.Id&type=training">Subscribe</a>
        </div>
    }
</div>
